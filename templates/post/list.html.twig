{% extends 'base.html.twig' %}


{% block body %}
    {% if app.user %}
        <div class="row mt-4 justify-content-center">
            <div class="col-6">
                {{ form_start(postForm) }}
                {{ form_row(postForm.content) }}
                {{ form_rest(postForm) }}
                <button type="submit" class="btn btn-block btn-primary">Post</button>
            </div>
        </div>
    {% endif %}

    {% for post in posts %}
    <div class="row mt-4 justify-content-center">
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ post.user.name }}</h5>
                    <h6 class="card-subtitle mb-2 text-muted">{{ post.createdAt|date("d.m.Y. h:i") }}</h6>
                    <p class="card-text">{{ post.content }}</p>
                    <a href="{{ path('post_details', {id: post.id}) }}" class="card-link">Details</a>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
{% endblock %}
